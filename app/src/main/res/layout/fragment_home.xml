<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/minia_elec_logo"
                android:contentDescription="@string/logo" />

            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/petrotrade_co"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/btn_pay_bills"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:background="@drawable/stroke_back"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="@string/pay_bills"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1.5"
                        android:contentDescription="@string/logo"
                        android:src="@drawable/ic_bill" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_pay_building_bills"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:background="@drawable/stroke_back"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="@string/pay_building_bills"
                        android:textSize="20sp" />

                    <ImageView
                        android:contentDescription="@string/logo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_bill" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_read"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:background="@drawable/stroke_back"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="@string/read_counter"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/logo"
                        android:layout_margin="8dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_meter" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:baselineAligned="false">


                    <LinearLayout
                        android:id="@+id/btn_reports"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_back"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="@string/today_report"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/logo"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_report" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_other"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_back"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="@string/other_services"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:contentDescription="@string/logo"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_other" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/powered_by"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold" />

        <ImageView
            android:contentDescription="@string/logo"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/qnb_logo" />
    </LinearLayout>
</LinearLayout>