<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_back"
    android:orientation="vertical"
    android:padding="@dimen/activity_medium_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_medium_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@id/date"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_medium_margin"
            android:textColor="@color/colorPrimary"
            android:text="@string/current_month"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="@string/total_collected_count"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_collected_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:paddingStart="@dimen/activity_medium_margin"
                android:paddingEnd="@dimen/activity_medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/activity_medium_margin"
            android:layout_marginBottom="@dimen/activity_medium_margin"
            android:background="@color/view_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/total_collected_amount"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_collected_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/activity_medium_margin"
                android:paddingEnd="@dimen/activity_medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/activity_medium_margin"
            android:layout_marginBottom="@dimen/activity_medium_margin"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/remain_bills_count"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remain_bills_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingStart="@dimen/activity_medium_margin"
                android:paddingEnd="@dimen/activity_medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/activity_medium_margin"
            android:layout_marginBottom="@dimen/activity_medium_margin"
            android:background="@color/view_line"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/remain_bills_amount"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remain_bills_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:paddingStart="@dimen/activity_medium_margin"
                android:paddingEnd="@dimen/activity_medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>